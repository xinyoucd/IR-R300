.questions 
    center(800px)
    color black
    text-align center
    border-top 1px solid lightGray
    padding-top rem(20px)
    line-height rem(24px)
    font-family Arial
    article &
        border-top none
    svg
        margin rem(15px)
        size(35,35)
    a
        text-decoration none
        border none
    .question
        .updated
            font-weight bold
        .answer
            border 2px solid lightgray
            margin 10px
            padding 10px
            background-color white
            &:hover
                color darken(main, 50%)
                background-color lightGray
